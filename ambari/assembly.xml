  <baseDirectory>/</baseDirectory>
  <formats>
    <format>zip</format>
  </formats>
  <fileSets>
    <fileSet>
      <directory>${project.basedir}/</directory>
      <filtered>true</filtered>
      <outputDirectory>SIDEWINDER</outputDirectory>
    </fileSet>
  </fileSets>
</assembly>